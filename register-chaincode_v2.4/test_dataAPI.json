import java.io.*;import java.io.File;import java.io.IOException;import com.alibaba.fastjson.JSON;public class test {    public static void main(String[] args) throws IOException {       // System.out.println("1");        //json格式要对        File file = new File("D:\\test.json");     String  res= ""+readerMethod(file);        System.out.println(res);    }    /**     * JSON读入文件 done     */    //把一个文件中的内容读取成一个String字符串    public static String readerMethod(File file) throws IOException {        FileReader fileReader = new FileReader(file);        Reader reader = new InputStreamReader(new FileInputStream(file), "Utf-8");        int ch= 0;        StringBuffer sb = new StringBuffer();        while((ch = reader.read()) != -1) {            sb.append((char) ch);        }        fileReader.close();        reader.close();        String jsonStr = sb.toString();        //System.out.println(JSON.toJSONString(jsonStr));     //   System.out.println(JSON.toJSONString(jsonStr, true));        return JSON.toJSONString(jsonStr, true);    }}